{
  "root": true,  
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": [
    "airbnb-base",
    "prettier"
],
  "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
  "rules": {
    "no-console": "off",
    "quotes": [
        "error",
        "single"
    ],
    "no-alert": "off",
    "no-plusplus": "off"
},
"overrides": [
    {
      "files": ["tests/**/*"],
      "env": {
        "jest": true
      }
    }
  ]
}